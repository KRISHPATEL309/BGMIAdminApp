<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#57535353"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leader Name"
                android:id="@+id/leaderName"
                android:gravity="center"
                android:textColor="#000000"
                android:background="@color/purple_200"
                android:textStyle="bold"
                android:textSize="25dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/player1Id"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/shap_textview"
                        android:gravity="center"
                        android:text="Player1 Id"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/player2Id"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/shap_textview"
                        android:text="Player2 Id"
                        android:gravity="center"
                        android:textColor="@color/white"/>


                    <TextView
                        android:id="@+id/player3Id"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Player3 Id"
                        android:gravity="center"
                        android:background="@drawable/shap_textview"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/player4Id"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Player4 Id"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/shap_textview"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/player1Name"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Player1 Name"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/shap_textview"/>

                    <TextView
                        android:id="@+id/player2Name"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Player2 Name"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/shap_textview"/>

                    <TextView
                        android:id="@+id/player3Name"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Player3 Name"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/shap_textview"/>

                    <TextView
                        android:id="@+id/player4Name"
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Player4 Name"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/shap_textview"/>

                </LinearLayout>



            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>



</LinearLayout>